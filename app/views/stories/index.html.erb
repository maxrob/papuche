<h1>Listing Stories</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stories_unfinished.each do |story| %>
      <tr>
        <th><%= story.title %></th>
        <td> - <%= story.content %></td>
        <% story.messages.each do |message| %>
            <td> - <%= message.content %></td>
        <% end %>

        <td><%= link_to "Contribuer", new_message_path(story_id: story.id.to_s) %></td>
        <td>
          <%= link_to "https://twitter.com/intent/tweet?text=Hello%20world", target: "_blank"  do %>
                <%= image_tag("http://allthingsd.com/files/2012/06/twitter-bird-1-380x285.png", width: 25, height: 25, border: 0) %>
          <% end %>
        </td>
        <td><%= link_to "❤", story_like_path(story), method: :get %></td>
        <td><%= button_to "Supprimer l'histoire", story, method: :delete, data: { confirm: "Are you sure?" } %></td>
      </tr>
  <% end %>
  <%= paginate @stories_unfinished %>
  </tbody>
</table>

<br>

<%= link_to 'New Story', new_story_path %>
